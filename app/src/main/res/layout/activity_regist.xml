<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login"
>
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints">
        <ImageButton
            android:id="@+id/bacha"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/bacha"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="100dp"/>
    </RelativeLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">


        <LinearLayout android:layout_marginBottom="20dp" android:layout_width="wrap_content"
                      android:layout_height="wrap_content" android:orientation="horizontal">
            <TextView
                    android:text="账号："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="274dp"
                    tools:layout_editor_absoluteX="63dp" android:id="@+id/textView2" tools:ignore="MissingConstraints"/>
            <EditText
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    android:ems="10"
                    tools:layout_editor_absoluteY="256dp" tools:layout_editor_absoluteX="133dp"
                    tools:ignore="MissingConstraints"/>
        </LinearLayout>

        <LinearLayout android:layout_marginBottom="20dp" android:layout_width="wrap_content"
                      android:layout_height="wrap_content" android:orientation="horizontal">
            <TextView
                    android:text="密码："

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="366dp"
                    tools:layout_editor_absoluteX="63dp" android:id="@+id/textView" tools:ignore="MissingConstraints"/>
            <EditText
                    android:id="@+id/password"
                    android:hint="Password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    tools:layout_editor_absoluteY="347dp" tools:layout_editor_absoluteX="133dp"
                    tools:ignore="MissingConstraints"/>
        </LinearLayout>
        <LinearLayout android:layout_marginBottom="20dp" android:layout_width="wrap_content"
                      android:layout_height="wrap_content" android:orientation="horizontal">
            <TextView
                    android:text="名称："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="366dp"
                    tools:layout_editor_absoluteX="63dp" tools:ignore="MissingConstraints"/>
            <EditText
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:hint="Name"
                    android:ems="10"
                    tools:layout_editor_absoluteY="347dp" tools:layout_editor_absoluteX="133dp"
                    tools:ignore="MissingConstraints"/>
        </LinearLayout>
        <LinearLayout android:layout_marginBottom="20dp" android:layout_width="wrap_content"
                      android:layout_height="wrap_content" android:orientation="horizontal">
            <TextView
                    android:text="性别："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:layout_editor_absoluteY="366dp"
                    tools:layout_editor_absoluteX="63dp" tools:ignore="MissingConstraints"/>


            <RadioGroup android:layout_marginRight="115dp" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <RadioButton android:id="@+id/nan" android:text="男" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <RadioButton android:id="@+id/nv" android:text="女" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </RadioGroup>
        </LinearLayout>

        <Button
                android:id="@+id/btnRegist"
                android:text="Regist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="433dp"
                tools:layout_editor_absoluteX="161dp" tools:ignore="MissingConstraints"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>